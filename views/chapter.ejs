<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= chapterName %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <style>
        /* Custom Fonts */
        body {
            font-family: 'Poppins', sans-serif;
        }

        h2, h3, p {
            font-family: 'Roboto', sans-serif;
        }

        /* Custom Font Colors */
        body {
            color: #2d3748; /* Dark gray text color */
        }

        h2 {
            color: #4a5568; /* Dark blue-gray heading color */
        }

        h3 {
            color: #1a202c; /* Dark gray heading color */
        }

        p {
            color: #4a5568; /* Dark blue-gray text color */
        }

        /* Custom Containers */
        .main-container {
            background-color: #f8f9fa; /* Light gray background color */
            padding: 20px;
            border-radius: 10px;
        }

        .left-container {
            width: 50%;
            padding-right: 20px;
        }

        .right-container {
            width: 50%;
            padding-left: 20px;
        }

        /* Custom Buttons */
        .custom-button {
            background-color: #4299e1; /* Blue button color */
            color: #ffffff; /* White text color */
        }

        .custom-button:hover {
            background-color: #3182ce; /* Darker blue on hover */
        }
    </style>
</head>

<body class="bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-600 text-gray-800">
    <div class="flex">
        <!-- Navigation -->
        <div>
            <a href="/course/<%= courseId %>">
                <div class="flex items-center justify-right">
                    <img src="https://cdn-icons-png.flaticon.com/128/3176/3176194.png"
                        class="w-35 h-12 ml-6 my-3 flex items-center justify-middle" alt="view course">
                    <div
                        class="block bg-orange-500 text-white rounded-md w-35 h-12 px-4 hover:bg-blue-600 transition duration-300">
                        Go to Course Index
                    </div>
                </div>
            </a>
        </div>

        <!-- Main Content Container -->
        <div class="container mx-auto p-8 flex">
            <!-- Left Side: Course Details -->
            <div class="w-1/2 pr-8 left-container main-container">
                <h2 class="text-5xl px-10 font-semibold mb-4"><%= chapterName %></h2>
                <h3 class="text-2xl mt-2">List of Pages..!</h3>
                <p class="m-2 px-4 text-sm">Recently updated pages will be displayed at the bottom of the list</p>
                <div class="mt-1 px-3 py-4">
                    <% for(var i=0; i < pages.length; i++) { %>
                    <div class="border-b border-gray-600 p-4">
                        <div class="flex items-center justify-between">
                            <span class="text-lg">Page: <%= pages[i].name %> </span>
                            <a href="/editPage/<%= pages[i].id %>">
                                <button class="border bg-green-400 text-white border-gray-400 px-4 py-2 rounded hover:bg-green-600 transition duration-300 custom-button">
                                    Edit Page
                                </button>
                            </a>
                        </div>
                        <p class="text-sm mt-2 text-gray-500">
                            <%= pages[i].content %>
                        </p>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Right Side: Add New Page -->
            <div class="w-1/2 pl-8 right-container main-container">
                <div>
                    <h3 class="text-xl font-semibold mb-2">Add New Page</h3>
                    <form action="/page" method="post">
                        <input type="hidden" name="chapterId" value="<%= chapterId %>">
                        <div class="flex flex-col mb-4">
                            <input type="text" placeholder="Page Name" name="pageName"
                                class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
                                required>
                        </div>
                        <div class="flex flex-col mb-4">
                            <textarea type="text" placeholder="Page Content" name="pageContent"
                                class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500"
                                rows="8"></textarea>
                        </div>
                        <div class="flex items-center">
                            <input type="submit"
                                class="custom-button rounded-md px-4 py-2 hover:bg-blue-600 transition duration-300"
                                value="Add Page">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

